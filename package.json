{
  "name": "zotero-web-library",
  "version": "1.0.31",
  "description": "Web library from zotero.org",
  "main": "src/js/zotero-web-library.js",
  "files": [
    "src/js",
    "src/scss",
    "build"
  ],
  "type": "module",
  "browserslist": "firefox >= 68, chrome >=67, edge >= 15, safari >= 10, last 2 versions, not dead, not ie 11, not ie 10",
  "scripts": {
    "serve": "node scripts/server.cjs -p $npm_package_config_port -t $npm_package_config_translation_server",
    "prepack": "run-s clean build",
    "postpack": "rimraf build",
    "prebuild": "npm run clean -s && mkdir -p build/static/",
    "clean": "rimraf build",
    "build": "run-s \"build:prepare\" \"build:all\" \"build:postprocess\"",
    "build:all": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:static -s'",
    "build:js": "mkdir -p build/static && NODE_ENV=production rollup -c",
    "build:scss": "for f in src/scss/*.scss; do node-sass $f --output-style compressed --output build/static/; done;",
    "build:html": "mkdir -p build/ && rsync -vazL src/html/* build/",
    "build:styles-json": "node scripts/build-styles-json.cjs --stylesCacheTime $npm_package_config_styles_cache_time",
    "build:locale": "node scripts/fetch-locale.cjs --localeCacheTime $npm_package_config_locale_cache_time",
    "build:version": "node scripts/store-version.cjs",
    "build:static": "mkdir -p build/static && rsync -vazL src/static/* build/static/",
    "build:postprocess": "postcss build/static/zotero-web-library.css --use autoprefixer --no-map -r",
    "build:prepare": "run-p \"build:version\" \"build:locale\" \"build:styles-json\"",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:static -s'",
    "devel:js": "rollup -c -w",
    "devel:scss": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run devbuild:scss'",
    "devel:html": "nodemon -q -w src/html -w config --ext '.' --exec 'npm run build:html'",
    "devel:static": "nodemon -q -w src/static --ext '.' --exec 'npm run build:static'",
    "devbuild:scss": "run-s devbuild:scss:build devbuild:scss:post",
    "devbuild:scss:build": "for f in src/scss/*.scss; do node-sass $f --recursive --source-map true --source-map-contents true --output build/static; done;",
    "devbuild:scss:post": "postcss build/static/*.css --use autoprefixer -r",
    "start:all": "run-p \"serve -s {@}\" \"devel -s {@}\"",
    "start": "run-s \"build:prepare\" \"start:all\"",
    "stylelint": "stylelint src/scss/**/*.scss || true",
    "eslint": "eslint \"src/js/**/*.+(js|jsx)\" || true",
    "lint": "run-p stylelint eslint",
    "watch:stylelint": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run stylelint'",
    "watch:eslint": "nodemon -q -w src/js --ext 'js,jsx' --exec 'npm run eslint'",
    "watch:lint": "run-p 'watch:stylelint -s' 'watch:eslint -s'",
    "test": "nyc mocha 'test/**/*.spec.+(js|jsx)'",
    "add-license": "node scripts/add-license.cjs"
  },
  "keywords": [
    "Zotero"
  ],
  "license": "AGPL-3.0",
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "@babel/runtime-corejs3": "^7.16.7",
    "@tinymce/tinymce-react": "^3.13.0",
    "bootstrap-sass": "^3.4.1",
    "classnames": "^2.3.1",
    "combine-section-reducers": "^1.0.6",
    "connected-react-router": "^6.9.2",
    "copy-to-clipboard": "^3.3.1",
    "core-js": "^3.20.2",
    "deep-equal": "^2.0.5",
    "file-saver": "^2.0.5",
    "history": "<5.0.0",
    "memoize-one": "^6.0.0",
    "param-case": "^3.0.4",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dnd": "^14.0.5",
    "react-dnd-html5-backend": "^14.1.0",
    "react-dnd-multi-backend": "^6.0.2",
    "react-dnd-touch-backend": "^14.1.1",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.4",
    "react-redux": "^7.2.6",
    "react-router": "<6.0.0",
    "react-router-dom": "<6.0.0",
    "react-transition-group": "^4.4.2",
    "react-virtualized-auto-sizer": "^1.0.6",
    "react-window": "^1.8.6",
    "react-window-infinite-loader": "^1.0.7",
    "reactstrap": "<9.0.0",
    "redux": "^4.1.2",
    "redux-async-queue": "^1.0.0",
    "redux-thunk": "^2.4.1",
    "tinymce": "5.10.2",
    "use-debounce": "^7.0.1",
    "zotero-api-client": "^0.37.1",
    "zotero-base-mappings": "0.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-async-to-generator": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@welldone-software/why-did-you-render": "^6.2.3",
    "autoprefixer": "^10.4.2",
    "babel-plugin-add-module-exports": "^1.0.4",
    "chai": "^4.3.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.6.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fetch-mock": "^9.11.0",
    "glob": "^7.2.0",
    "http-proxy": "^1.18.1",
    "mocha": "^9.1.3",
    "node-fetch": "<4.0.0",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "react-test-renderer": "^17.0.2",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-web-worker-loader": "^1.6.1",
    "run-sequence": "^2.2.1",
    "serve-static": "^1.14.2",
    "sinon": "^12.0.1",
    "stylelint": "^14.2.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0"
  }
}
